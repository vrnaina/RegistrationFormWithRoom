<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_margin="10dp"
    android:background="#F1F1F1">

    <!-- main fname -->
    <TextView
        android:id="@+id/tvMFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name: "
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvSFname"/>

    <!-- second fname -->
    <TextView
        android:id="@+id/tvSFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tvMFname"
        app:layout_constraintTop_toTopOf="@+id/tvMFname"
        app:layout_constraintBottom_toBottomOf="@+id/tvMFname"/>

    <!-- main lname -->
    <TextView
        android:id="@+id/tvMLname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name: "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMFname"
        app:layout_constraintEnd_toStartOf="@+id/tvSLname"/>

    <!-- second lname -->
    <TextView
        android:id="@+id/tvSLname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tvMLname"
        app:layout_constraintTop_toTopOf="@+id/tvMLname"
        app:layout_constraintBottom_toBottomOf="@+id/tvMLname"/>

    <!-- main email -->
    <TextView
        android:id="@+id/tvMEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMLname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvSEmail"/>

    <!-- second email -->
    <TextView
        android:id="@+id/tvSEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tvMEmail"
        app:layout_constraintTop_toTopOf="@+id/tvMEmail"
        app:layout_constraintBottom_toBottomOf="@+id/tvMEmail"/>

    <!-- main phone -->
    <TextView
        android:id="@+id/tvMPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvSPhone"/>

    <!-- second phone -->
    <TextView
        android:id="@+id/tvSPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tvMPhone"
        app:layout_constraintTop_toTopOf="@+id/tvMPhone"
        app:layout_constraintBottom_toBottomOf="@+id/tvMPhone"/>

    <!-- main password -->
    <TextView
        android:id="@+id/tvMPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvSPass"/>

    <!-- second password -->
    <TextView
        android:id="@+id/tvSPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tvMPass"
        app:layout_constraintTop_toTopOf="@+id/tvMPass"
        app:layout_constraintBottom_toBottomOf="@+id/tvMPass"/>

</androidx.constraintlayout.widget.ConstraintLayout>